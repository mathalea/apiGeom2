{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "actions/*": ["src/actions/*"],
      "dynamicNumbers/*": ["src/dynamicNumbers/*"],
      "elements/*": ["src/elements/*"],
      "pointerActions/*": ["src/pointerActions/*"],
      "transformations/*": ["src/transformations*"]
    }
  },
  "include": ["src", "vite.config.js"]
}
